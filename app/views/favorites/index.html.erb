<h1>お気に入り一覧ページ</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Picture</th>
    <th>Content</th>
  </tr>

<% @favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.user.name %></td>
    <td><%= image_tag favorite.image.url %></td>
    <td><%= favorite.content %></td>
    <td><%= link_to '確認する', picture_path(favorite.id) %></td>
  </tr>
<% end %>
</table>
<br>
